<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blooddonate_profile_titlebar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bloodbank_titlebar_background_all">

    <ImageView
        android:id="@+id/blooddonate_profile_titlebar_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/app_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/blooddonate_profile_titlebar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Donor Finder"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/blooddonate_profile_titlebar_icon"
        android:layout_marginLeft="10dp"


        />
    <Button
        android:id="@+id/edit_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/editbutton"
        android:layout_marginRight="20dp"

        />

</RelativeLayout>