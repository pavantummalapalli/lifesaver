<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/app_info_background"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="28sp"
                android:text="Name"
                android:textColor="#000000"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="26"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="Gender : "
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/gender_user"
                    android:layout_width="0dp"
                    android:layout_weight="74"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#000000"
                    />

            </LinearLayout>

             <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="42"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="Blood Group : "
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/bloodgroup_user"
                android:layout_width="0dp"
                android:layout_weight="58"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text=""
                android:textColor="#000000"
                />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="Date of Birth : "
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/dob_user"
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="Mobile Number : "
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/mobile_user"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="22"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="Email : "
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/email_user"
                    android:layout_width="0dp"
                    android:layout_weight="78"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="22"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="State : "
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/state_user"
                    android:layout_width="0dp"
                    android:layout_weight="78"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="18"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="City : "
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/city_user"
                    android:layout_width="0dp"
                    android:layout_weight="82"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="29"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="Pincode : "
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/pincode_user"
                    android:layout_width="0dp"
                    android:layout_weight="63"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="29"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="Address : "
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/address_user"
                    android:layout_width="0dp"
                    android:layout_weight="63"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#000000"
                    />
            </LinearLayout>




        </LinearLayout>

    </ScrollView>




</LinearLayout>
